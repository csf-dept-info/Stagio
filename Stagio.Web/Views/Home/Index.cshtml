@using Stagio.Domain.Application
@model bool

@if (!Model)
{
    <div id="flash-message" class="alert danger alert-danger">
        <p>
            <span>
                @WebMessage.HomeMessage.SYSTEM_IS_NOT_OPEN
            </span>
        </p>
    </div>
}


<div class="jumbotron">
    <div class="h1">
        @WebMessage.HomeMessage.WELCOME
        <img src="~/Ressources/Logo_2(990x430).png" alt="Stage Stagio" name="Stagio Sainte-Foy" height="50%" width="50%" />
    </div>
    <p class="lead">
        @WebMessage.HomeMessage.WELCOMING_MESSAGE_PART_1 <br /> @WebMessage.HomeMessage.WELCOMING_MESSAGE_PART_2
    </p>
</div>

<p id="home-index-page">

    <div class="col-lg-6 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-3">
                        <i class="fa fa-briefcase fa-5x hidden-xs"></i>
                    </div>
                    <div class="col-xs-9 text-right-md text-right-lg">
                        <div class="huge">@WebMessage.HomeMessage.COMPANY</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action(MVC.Company.ChooseCompany())" id="employee-create">
                <div class="panel-footer">
                    <span class="pull-left"><h4><b>@WebMessage.HomeMessage.SUBSCRIPTION</b></h4></span>
                    <span class="pull-right"><i class="fa fa-3x fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-3">
                        <i class="fa fa-user fa-5x hidden-xs"></i>
                    </div>
                    <div class="col-xs-9 text-right-md text-right-lg">
                        <div class="huge">@WebMessage.HomeMessage.STUDENT</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action(MVC.Student.SubscribeStudent())" id="subscribe-student">

                <div class="panel-footer">
                    <span class="pull-left"><h4><b>@WebMessage.HomeMessage.SUBSCRIPTION</b></h4></span>
                    <span class="pull-right"><i class="fa fa-3x fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</p>

@if (Request.IsAuthenticated)
{
    if (User.IsInRole(RoleNames.Student))
    {
        Response.Redirect(Url.Action(MVC.Student.Index(), MVC.Student.Name));
    }

    if (User.IsInRole(RoleNames.Employee))
    {
        Response.Redirect(Url.Action(MVC.Employee.Index(), MVC.Employee.Name));
    }
    if (User.IsInRole(RoleNames.Coordinator))
    {
        Response.Redirect(Url.Action(MVC.Coordinator.Index(), MVC.Coordinator.Name));
    }
}
