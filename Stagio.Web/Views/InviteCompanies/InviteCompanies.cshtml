@model Stagio.Web.ViewModels.InviteCompanies.InviteCompanies

@using Stagio.Web.Automation.PageObjects.CoordinatorPages

<h2 id="@InviteCompaniesPage.PAGE_ID">@InviteCompaniesPage.PAGE_TITLE</h2>
<hr />

@Html.AntiForgeryToken()

@using (Html.BeginForm("InviteCompanies", "InviteCompanies", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="col-md-offset-2 col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading" id="panel-header">
                    Envoyer un message aux entreprises
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Subject, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", id = InviteCompaniesPage.OBJECT_ID } })
                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Body, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Body, new { @class = "form-control", id = InviteCompaniesPage.MESSAGE_ID, placeholder = "Veuillez saisir votre message.", rows = "6" })
                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="panel-footer ">
                    <div class="col-md-offset-2">
                        <input type="submit" value="Envoyer les invitations" class="btn btn-primary" id="@InviteCompaniesPage.OK_BUTTON_ID" />
                        @Html.ActionLink("Annuler", MVC.Coordinator.Index(), new { @class = "btn btn-default", id = InviteCompaniesPage.CANCEL_BUTTON_ID })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
