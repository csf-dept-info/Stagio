@model Stagio.Web.ViewModels.Coordinator.ChoosePeriod

<h2 id=@Stagio.Web.Automation.PageObjects.CoordinatorPages.ChoosePeriodCoordinatorPage.PAGE_ID>@WebMessage.CoordinatorMessage.CHOOSE_PERIOD_TITLE</h2>
<p>@WebMessage.CoordinatorMessage.CHOOSE_PERIOD_SUBTITLE</p>

@Html.AntiForgeryToken()

@using (Html.BeginForm("ChooseInternshipPeriod", "Coordinator", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />
        <div class="col-md-offset-2 col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading" id="panel-header">
                    @WebMessage.CoordinatorMessage.CHOOSE_DATES
                </div>
                <div class="panel-body">
                    <p>@WebMessage.CoordinatorMessage.LAST_CHOSEN_PERIOD(Model.StartDate.ToShortDateString(), Model.EndDate.ToShortDateString())</p>
                    @Html.ValidationMessage("dateError", "", new { @class = "text-danger col-md-offset-1" })
                    <br /><br />
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "datepicker", id = "start-date-picker" }})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @class = "datepicker", id = "end-date-picker" }})
                        </div>
                    </div>
                </div>

                <div class="panel-footer">
                    <p>
                        <input type="submit" value="@WebMessage.GeneralMessage.SAVE" id="choose-period-button" class="btn btn-primary" />
                        @Html.ActionLink(@WebMessage.GeneralMessage.BACK, MVC.Coordinator.Index(), new { @class = "btn btn-default" })
                    </p>
                </div>
            </div>
        </div>
    </div>
}

<!-- DatePicker Content -->
<link href="~/Content/css/plugins/datepicker/datepicker3.css" rel="stylesheet" />
<script src="~/Content/js/plugins/datepicker/bootstrap-datepicker.js"></script>
<script src="~/Content/js/plugins/datepicker/bootstrap-datepicker.fr.js"></script>

<script type="text/javascript">
    $('.datepicker').datepicker({
        format: "yyyy-mm-dd",
        startDate: "today",
        language: "fr",
        todayHighlight: true,
        autoclose: true
    });
</script>
