@model Stagio.Web.ViewModels.Coordinator.PeriodsList

<h2 id="periods-list-page">@WebMessage.CoordinatorMessage.ChoosePeriod.PERIODS_LIST_TITLE</h2>
<hr />


<!-- Nav tabs -->
<div class="panel-primary">
    <div class="panel-heading" id="period">@WebMessage.CoordinatorMessage.ChoosePeriod.INTERNSHIP_PERIODS</div>
    <div class="panel-body">
        <ul class="nav nav-tabs">
            <li class="active">
                <input type="hidden" name="periods-count" value="@Model.periodsList.Count()">
                <a href="#period-pills" data-toggle="tab" id="periods-count" aria-expanded="true">@WebMessage.CoordinatorMessage.ChoosePeriod.TOTAL_PERIODS(Model.periodsList.Count())</a>
            </li>
        </ul>
        <br />

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane fade active in" id="period-pills">
                @Html.Partial("_PeriodIndexTablePartial", @Model.periodsList)
            </div>
        </div>
    </div>
</div>
<!-- DataTables Scripts -->
<script src="~/Content/js/plugins/metisMenu/metisMenu.min.js"></script>
<script src="~/Content/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/Content/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="~/Content/js/sb-admin-2.js"></script>

<script>
    $(document).ready(function () {
        $('table.display').DataTable({
            "info": false,
            "language": {
                "search": "<i class=\"fa fa-search\"></i> Rechercher une période ",
                "lengthMenu": "_MENU_ enregistrements par page",
                "zeroRecords": "Rien n'a été trouvé",
                "info": "Page _PAGE_ de _PAGES_",
                "infoFiltered": "(_MAX_ enregistrements filtrés)",
                "paginate": {
                    first: "Premier",
                    previous: "Précédent",
                    next: "Suivant",
                    last: "Dernier"
                }
            },
            "columnDefs": [{ orderable: false, "targets": -1 }],
            "sDom": '<"row view-filter"<"col-sm-12"<"pull-left"l><"pull-right"f><"clearfix">>>t<"row view-pager"<"col-sm-12"<"text-right"ip>>>'
        });
    })
</script>
