@model IEnumerable<Stagio.Web.ViewModels.Coordinator.ChoosePeriod>
    
<h2 id="">Liste des périodes de stages passées</h2>
<hr />

<div class="table-responsive">
    <table id="offers-table" class="display dataTable table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
            </tr>
        </thead>

        <tbody>
            @{var offerID = 1;}
            @foreach (var item in Model)
            {
                <tr id="@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate, new { id = "StartDate" + item.Id })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate, new { id = "EndDate" + item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Voir les détails", MVC.InternshipOffer.Details(item.Id), new { id = "internship-offer-details-" + offerID, @class = "btn btn-primary" })
                    </td>
                </tr>
                offerID++;
            }
        </tbody>
    </table>
</div>



<!-- DataTables Scripts -->
<script src="~/Content/js/plugins/metisMenu/metisMenu.min.js"></script>
<script src="~/Content/js/plugins/dataTables/jquery.dataTables.js"></script>
